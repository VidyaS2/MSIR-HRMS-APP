<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:contentDescription="Close"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/clock_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/clock_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockInLabel"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        android:hint="Uername"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:inputType="time"
        android:maxLines="1" />
    <TextView
        android:id="@+id/clock_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/clock_useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockInLabel"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:inputType="time"
        android:maxLines="1" />
    <TextView
        android:id="@+id/clock_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/clock_date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockInLabel"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        android:hint="Date"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:inputType="time"
        android:maxLines="1" />
    <!-- Clock In Input Field -->
    <TextView
        android:id="@+id/clockInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock In"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/clockInField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clockInLabel"
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_background"
        android:hint="Clock In Time 00:00"
        android:textColorHint="@android:color/darker_gray"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:inputType="time"
        android:maxLines="1" />


    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3C71B1"
        android:text="Update"
        android:layout_marginTop="16dp"/>
</LinearLayout>
